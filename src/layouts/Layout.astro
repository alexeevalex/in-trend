---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={title} />

    <!-- Fonts -->
    <style>
      /* AVENIR */
      @font-face {
        font-family: "Avenir";
        font-weight: 900;
        font-style: italic;
        font-display: swap;
        src: url("fonts/avenir/black-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 900;
        font-style: normal;
        font-display: swap;
        src: url("fonts/avenir/black.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 300;
        font-style: italic;
        font-display: swap;
        src: url("fonts/avenir/light-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 300;
        font-style: normal;
        font-display: swap;
        src: url("fonts/avenir/light.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 500;
        font-style: italic;
        font-display: swap;
        src: url("fonts/avenir/medium-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 500;
        font-style: normal;
        font-display: swap;
        src: url("fonts/avenir/medium.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 400;
        font-style: italic;
        font-display: swap;
        src: url("fonts/avenir/normal-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Avenir";
        font-weight: 400;
        font-style: normal;
        font-display: swap;
        src: url("fonts/avenir/normal.woff2") format("woff2");
      }

      /* BIG CASLON */
      @font-face {
        font-family: "Big Caslon";
        font-weight: 900;
        font-style: italic;
        font-display: swap;
        src: url("fonts/big-caslon/black-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Big Caslon";
        font-weight: 900;
        font-style: normal;
        font-display: swap;
        src: url("fonts/big-caslon/black.woff2") format("woff2");
      }

      @font-face {
        font-family: "Big Caslon";
        font-weight: 700;
        font-style: italic;
        font-display: swap;
        src: url("fonts/big-caslon/bold-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Big Caslon";
        font-weight: 700;
        font-style: normal;
        font-display: swap;
        src: url("fonts/big-caslon/bold.woff2") format("woff2");
      }

      @font-face {
        font-family: "Big Caslon";
        font-weight: 400;
        font-style: italic;
        font-display: swap;
        src: url("fonts/big-caslon/normal-italic.woff2") format("woff2");
      }

      @font-face {
        font-family: "Big Caslon";
        font-weight: 400;
        font-style: normal;
        font-display: swap;
        src: url("fonts/big-caslon/normal.woff2") format("woff2");
      }
    </style>

    <!-- TODO: get right favicon (maybe we can use the in-trend small logo) -->
    <link
      rel="icon"
      type="image/svg+xml"
      href=`${import.meta.env.BASE_URL}favicon.svg`
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
