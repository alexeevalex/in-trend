---
interface Props {
  imgSrc: string;
  name: string;
  shortDescription: string;
  longDescription: string;
  smallImage: boolean;
}
const { imgSrc, name, shortDescription, longDescription, smallImage } =
  Astro.props;
---

<div class=`${smallImage ? "w-40 md:w-64" : "w-64"}`>
  <img
    src=`${import.meta.env.BASE_URL}${imgSrc}`
    alt=""
    class=`rounded-xl object-cover ${smallImage ? "w-40" : "w-64"}`
  />
  <h3 class="mt-6 font-frank-ruhl-libre text-2xl font-light">{name}</h3>
  <p class="mt-1 font-monsterrat text-sm leading-relaxed text-rock-200">
    <span class="font-bold">{shortDescription}</span>
    {longDescription}
  </p>
</div>
