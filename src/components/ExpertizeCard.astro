---
interface Props {
  imgSrc: string;
  title: string;
  description: string;
}
const { imgSrc, title, description } = Astro.props;
---

<article class="px-2">
  <img
    src={imgSrc}
    alt=""
    class="mx-auto h-44 w-44 rounded-full border border-brown-600/10 object-cover p-3"
  />
  <h3 class="mt-4 text-center font-serif text-xl font-thin capitalize">
    {title}
  </h3>
  <p class="mt-4 pb-4 text-center text-sm text-rock-200">
    {description}
  </p>
</article>
