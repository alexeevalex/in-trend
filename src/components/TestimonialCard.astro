---
import IconOpenQuote from "../svgs/icons/IconOpenQuote.astro";
interface Props {
  imgSrc: string;
  description: string;
  author: string;
  authorJobTitle: string;
}
const { imgSrc, description, author, authorJobTitle } = Astro.props;
---

<div class="overflow-hidden rounded-2xl">
  <img
    src=`${import.meta.env.BASE_URL}${imgSrc}`
    alt=""
    class="h-auto w-full"
  />
  <div class="bg-white/10 px-8 backdrop-blur-lg lg:px-20">
    <div class="pt-12">
      <IconOpenQuote class="mx-auto text-white" />
    </div>
    <p class="mt-6 text-center text-sm leading-relaxed text-white">
      {description}
    </p>
    <p class="mt-6 text-center font-medium text-white">
      {author}
    </p>
    <p class="mt-8 text-center text-xs text-white">
      {authorJobTitle}
    </p>
    <slot />
    <div class="pb-10"></div>
  </div>
</div>
