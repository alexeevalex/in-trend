---
import ExpertizeCard from "../components/ExpertizeCard.astro";
import Footer from "../components/Footer.astro";
import NavigationBar from "../components/NavigationBar.astro";
import PillShapeLink from "../components/PillShapeLink.astro";
import ReportSection from "../components/ReportSection.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import Layout from "../layouts/Layout.astro";
import LogoBioderma from "../svgs/companies/LogoBioderma.astro";
import LogoBuxom from "../svgs/companies/LogoBuxom.astro";
import LogoChanel from "../svgs/companies/LogoChanel.astro";
import LogoChristianDior from "../svgs/companies/LogoChristianDior.astro";
import LogoCoty from "../svgs/companies/LogoCoty.astro";
import LogoFilorga from "../svgs/companies/LogoFilorga.astro";
import LogoHenkel from "../svgs/companies/LogoHenkel.astro";
import LogoLauraMercier from "../svgs/companies/LogoLauraMercier.astro";
import LogoLoreal from "../svgs/companies/LogoLoreal.astro";
import LogoLVMH from "../svgs/companies/LogoLVMH.astro";
import LogoMerck from "../svgs/companies/LogoMerck.astro";
import LogoPuig from "../svgs/companies/LogoPuig.astro";
import LogoUnilever from "../svgs/companies/LogoUnilever.astro";
import Logo from "../svgs/Logo.astro";
---

<Layout title="In Trend - The future of beauty">
  <NavigationBar variant="transparent" />

  <main>
    <section class="relative z-0">
      <!-- TODO: add image alt-->
      <!-- TODO: add image lazy-loading-->
      <!-- TODO: add image width and height to prevent layout shifting-->
      <!-- TODO: add fonts to this website-->
      <!-- TODO: (important) this image should come from the Slack zip file-->
      <!-- TODO: make this a single image?-->
      <picture>
        <source
          srcset="images/index/main-desktop.jpg"
          media="(min-width: 640px)"
        />
        <img
          src="images/index/main-mobile.jpg"
          class="absolute left-0 top-0 -z-10 h-full w-full object-cover"
          alt=""
        />
      </picture>
      <div class="pt-40 sm:pt-80">
        <Logo class="mx-auto h-10 w-auto text-white sm:h-14" />
      </div>
      <!-- TODO: do we need to 'trend' this on mobile? -->
      <h1
        class="mx-auto mt-6 max-w-screen-lg break-words px-2 text-center text-6xl tracking-wider text-white sm:text-7xl"
      >
        Your beauty <span class="hidden sm:inline">trend</span> ideation and intelligence
        partner
      </h1>
      <p
        class="mt-6 text-center font-light tracking-wide text-white sm:mt-8 sm:text-lg"
      >
        We create for you, with you
      </p>
      <div class="mt-6 pb-20 text-center sm:pb-48">
        <PillShapeLink href="#" variant="light" title="Find out more" />
      </div>
    </section>

    <!-- TODO: should we make the wrapper-div of this stuff separate? -->
    <ReportSection />

    <section class="bg-beige-300">
      <div class="mx-auto max-w-screen-xl">
        <h2
          class="pt-10 text-center text-2xl font-medium capitalize tracking-wide text-brown-600"
        >
          In-Trend expertize
        </h2>
        <div class="mt-6 flex flex-wrap justify-center gap-2">
          <span
            class="inline-block rounded-full border border-brown-600/10 px-6 py-2 text-sm font-semibold text-brown-600"
            >Beauty Tracking</span
          >
          <span
            class="inline-block rounded-full border border-brown-600/10 px-6 py-2 text-sm font-semibold text-brown-600"
            >Beauty Forecasting</span
          >
          <span
            class="inline-block rounded-full border border-brown-600/10 px-6 py-2 text-sm font-semibold text-brown-600"
            >Ideation Workshops</span
          >
        </div>

        <div class="mt-6 grid gap-6 md:grid-cols-3">
          <ExpertizeCard
            imgSrc="images/index/expertize/100-focused-on-beauty.jpg"
            title="100% focused on beauty"
            description="Analysis of all things make-up, skincare, hair, wellness, fragrance, packaging, nail, body care, salon and spa - with an edge for aesthetic medicine and professional treatments"
          />
          <ExpertizeCard
            imgSrc="images/index/expertize/worldwide-network-of-experts.jpg"
            title="Worldwide network of experts"
            description="Expansive connections with professionals (hairstylists, make-up artists, estheticians etc.) and experts (entrepreneurs, freelancers) across the world"
          />
          <ExpertizeCard
            imgSrc="images/index/expertize/strong-credentials.jpg"
            title="Strong credentials"
            description="Almost two decades of experience helping industry leaders grow"
          />
        </div>

        <div class="mt-6 text-center">
          <PillShapeLink href="#" title="Schedule a call" variant="dark" />
        </div>
      </div>

      <div class="mt-14 flex justify-center gap-8 overflow-x-hidden pb-20">
        <LogoLVMH class="h-10 w-auto shrink-0" />
        <LogoUnilever class="h-10 w-auto shrink-0" />
        <LogoLoreal class="h-10 w-auto shrink-0" />
        <LogoMerck class="h-10 w-auto shrink-0" />
        <LogoBioderma class="h-10 w-auto shrink-0" />
        <LogoHenkel class="h-10 w-auto shrink-0" />
        <LogoChanel class="h-10 w-auto shrink-0" />
        <LogoFilorga class="h-10 w-auto shrink-0" />
        <LogoBuxom class="h-10 w-auto shrink-0" />
        <LogoLauraMercier class="h-10 w-auto shrink-0" />
        <LogoPuig class="h-10 w-auto shrink-0" />
        <LogoCoty class="h-10 w-auto shrink-0" />
      </div>
    </section>

    <section class="bg-carrot-300 px-4 pt-16">
      <!-- TODO: there's a different image on mobile and on desktop for one testimonial -->
      <div class="grid gap-8 md:grid-cols-3 lg:grid-cols-4">
        <TestimonialCard
          imgSrc="images/index/testimonials/jacques-valero.jpg"
          description="In-Trend is a factory of insights, informing us of the latest product claims and highly precious information to help us innovate. Their emerging new trends are always highly accurate, and very useful."
          author="-Jacques Valero"
          authorJobTitle="Parfums Responsible Innovation"
        >
          <LogoChristianDior class="mx-auto mt-14 h-auto w-40 text-white" />
        </TestimonialCard>
        <TestimonialCard
          imgSrc="images/index/testimonials/kristi-sloe.jpg"
          description="In-Trend LTD is a valued partner in product innovation and trends. Our teams love their inspiring ideation workshops, which are becoming a crucial touchpoint in our product development process."
          author="-Kristi Sloe"
          authorJobTitle="Vice President Global Product Development"
        >
          <LogoLauraMercier class="mx-auto mt-14 h-auto w-40 text-white" />
        </TestimonialCard>
        <TestimonialCard
          imgSrc="images/index/testimonials/isabelle-montferrand.jpg"
          description="In-Trend is a key partner in our innovation monitoring process. For many years, they have supported us in monitoring and decoding beauty innovations. All thanks to an expert, highly responsive and friendly team. Attentive to our needs, they constantly adapt and re-work their proposals and formats. Great relationship."
          author="-Isabelle Montferrand"
          authorJobTitle="Competitive Intelligence Innovation Direction"
        >
          <LogoLoreal class="mx-auto mt-14 h-auto w-40 text-white" />
        </TestimonialCard>
        <TestimonialCard
          imgSrc="images/index/testimonials/edelina-natale.jpg"
          description="In-Trend's reporting on product launches and trends in both the Latin American & Asian hair markets, provides vital insights for our team."
          author="-Edelina Natale"
          authorJobTitle="Innovation & Trend Manager"
        >
          <LogoHenkel class="mx-auto mt-14 h-auto w-24 text-white" />
        </TestimonialCard>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
