---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"a"> {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<div class="grid px-4 lg:grid-cols-2 lg:gap-24">
  <!-- TODO: fix top border issue, it should be full width -->
  <h2 class="border-t pt-6 font-serif text-2xl font-light capitalize">
    {title}
  </h2>
  <p class="mb-8 mt-6 text-sm font-light text-brown-600">
    {description}
  </p>
</div>
